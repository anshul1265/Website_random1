<div class="container-fluid mt-5 about-style" id="serviceid">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row">
        <h1 class="main-heading text-center">Contact Us</h1>
        <p class="text-center sub-heading">we will be happy to help you</p>
        <form action="/contact" method="post">
          <div class="form-group col-md-8 mx-auto">
            <label for="exampleInputEmail1" class="form-label">Name</label>
            <input
              type="text"
              class="form-control" name="name" id="exampleInputPassword1"
            />
          </div>
          <div class="form-group col-md-8 mx-auto">
            <label for="exampleInputEmail1" class="form-label">E-mail</label>
            <input
              type="email"
              class="form-control" name="email" id="exampleInputEmail1"
            />
          </div>
          <div class="form-group col-md-8 mx-auto">
            <label for="exampleInputEmail1" class="form-label">Phone</label>
            <input
              type="text"
              class="form-control" name="phone" id="exampleInputPassword1"
            />
          </div>
          <div class="form-group col-md-8 mx-auto">
            <label for="exampleInputEmail1" class="form-label">Message</label>
            <input
              type="textarea"
              class="form-control" name="message" id="exampleInputPassword1"
            />
          </div>
          <br><br>
          <div class="form-group col-md-8 mx-auto">
          <button type="submit" class="btn btn-primary btn btn-lg btn-style px-auto">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
